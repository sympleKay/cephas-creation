    <section class="mt-5">
        <div id="img_slider" class="carousel slide" data-ride="carousel" data-interval="7000" data-pause="false">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/img/img.jpg" alt="First Picture" class="sym-image-slide-sm sym-image-slide">
                </div>
                <div class="carousel-item">
                    <img src="/img/img1.jpg" alt="Second Picture" class="sym-image-slide-sm sym-image-slide">
                </div>
                <div class="carousel-item">
                    <img src="/img/img2.jpg" alt="Third Picture" class="sym-image-slide-sm sym-image-slide">
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-6 arrowMargin">
                        <a href="#img_slider" class="carousel-control-prev" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon bg-dark"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a href="#img_slider" class="carousel-control-next" role="button" data-slide="next">
                            <span class="carousel-control-next-icon bg-dark"></span>
                            <span class="sr-only">Next</span>
